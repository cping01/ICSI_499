<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.damc.driver_action.ui.homeBase.home.HomeScreenViewModel" />

        <variable
            name="fragment"
            type="com.damc.driver_action.ui.homeBase.home.HomeScreen" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5F3">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/top_background_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/AutoInsights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fava"
                android:shadowColor="#DF000000"
                android:shadowRadius="20"
                android:text="AutoInsights"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="50sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_layout"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AutoInsights">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/rowdies_l"
                    android:gravity="center"
                    android:text="Date"
                    android:textSize="15dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="360dp"
            android:layout_height="550dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">


                <LinearLayout
                    android:id="@+id/ll_user_status"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_layout"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/rowdies_l"
                        android:gravity="left"
                        android:padding="16dp"
                        android:text="User Status"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_user_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/rowdies_l"
                        android:gravity="right|center_vertical"
                        android:padding="16dp"
                        android:text="Waiting for service..."
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_driver_data"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_layout"
                    android:backgroundTint="#762cb0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_velocity"
                        android:layout_width="340dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/rounded_layout"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="320dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="left"
                            android:padding="16dp"
                            android:text="Speed"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_velocity"
                            android:layout_width="320dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="right"
                            android:padding="16dp"
                            android:text="N/A"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_acceleration"
                        android:layout_width="340dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/rounded_layout"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="left"
                            android:padding="16dp"
                            android:text="Acceleration"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_acceleration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="right"
                            android:padding="16dp"
                            android:text="N/A"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hard_stop"
                        android:layout_width="340dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/rounded_layout"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="left"
                            android:padding="16dp"
                            android:text="Hard Stops"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_hard_stop_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="right"
                            android:padding="16dp"
                            android:text="N/A"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_user_fast_acceleration"
                        android:layout_width="340dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/rounded_layout"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="left"
                            android:padding="16dp"
                            android:text="Fast Accelerations"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_fast_acceleration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/rowdies_l"
                            android:gravity="right"
                            android:padding="16dp"
                            android:text="N/A"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_rider"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:fontFamily="@font/rowdies_l"
                    android:onClick="@{fragment.onClickSummery}"
                    android:text="Start Ride"
                    android:textSize="30sp"
                    android:visibility="visible">

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


